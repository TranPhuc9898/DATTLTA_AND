<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.HomeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/edt_name"
            android:background="#fff"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_30sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:text="User123123"
            android:gravity="center"
            android:textColor="#000"/>
        <Button
            android:id="@+id/bt_changename"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30dp"
            android:text="change"
            android:background="@android:color/white"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/imageView"
        android:layout_width="195dp"
        android:layout_height="229dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_iconfinder" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/home_start"
        android:layout_width="280dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:text="@string/take_quiz"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/home_filter"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/roundable2"
            android:text="@string/filter"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="visible" />
        <TextView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/home_highscore"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/roundable2"
            android:text="@string/highscore"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>


